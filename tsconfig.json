{
  "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "baseUrl": ".",
      "rootDir": ".",
      "paths": {
          "@components/*": ["./components/*"],
          "@const/*": ["./constants/*"],
          "@hooks/*": ["./hooks/*"],
          "@public/*": ["./public/*"],
          "@styles/*": ["./styles/*"],
          "@assets/*": ["./assets/*"],
          "@utils/*": ["./utils/*"],
          "@constants/*": ["./constants/*"],
          "@store/*": ["./store/*"],
          "@service/*": ["./service/*"],
          "@context/*": ["./context/*"],
          "@types/*": ["./types/*"]
      },
      "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js",
    "custom.d.ts",
    "styles",
    "pages",
    "public",
    "context",
  ],
  "exclude": ["node_modules"]
}
